<h2>All Contractors</h2>

<% for contractor in @contractors %>
  <p>
    <%= link_to "#{contractor.full_name}: #{contractor.email} - #{contractor.password}", view_contractor_path(contractor.id) %>
  </p>
<% end %>

<h2>Create New Contractor</h2>

<span style="color: red;"><%= flash[:create_contractor_error] %></span>

<%= form_tag(create_contractor_path, method: 'post') do %>
  <p>
    <%= label_tag(:full_name, "Full Name") %>
    <%= text_field_tag(:full_name) %>
  </p>

  <p>
    <%= label_tag(:email, "Email") %>
    <%= text_field_tag(:email) %>
  </p>
  
  <p>
    <%= label_tag(:num_voters, "Number of Voters") %>
    <%= text_field_tag(:num_voters) %>
  </p>

  <p>
    <%= submit_tag("Submit") %>
  </p>
<% end %>

<em>Logged in as <%= @admin.full_name %> (<%= @admin.email %>)</em>